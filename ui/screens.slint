export component HomeScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback start-brew-clicked();
    callback stop-brew-clicked();
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Home";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            ScrollView {
                VerticalLayout {
                    padding: 16px;
                    spacing: 24px;
                    
                    Text {
                        text: "Overview";
                        font-size: 14px;
                        font-weight: 500;
                        color: #9E9E9E;
                    }
                    
                    HorizontalLayout {
                        spacing: 12px;
                        
                        MetricCard {
                            data: {
                                label: "Water Temp",
                                value: data.water-temperature,
                                unit: "°F",
                                trend: "",
                                trend-value: ""
                            };
                        }
                        MetricCard {
                            data: {
                                label: "Brew Time",
                                value: data.brew-time-remaining,
                                unit: "min",
                                trend: "",
                                trend-value: ""
                            };
                        }
                        MetricCard {
                            data: {
                                label: "Cups Made",
                                value: data.cups-brewed-today,
                                unit: "",
                                trend: "",
                                trend-value: ""
                            };
                        }
                    }

                    Text {
                        text: "Status";
                        font-size: 14px;
                        font-weight: 500;
                        color: #9E9E9E;
                    }
                    
                    Rectangle {
                        background: #2A2A2A;
                        border-radius: 12px;
                        
                        VerticalLayout {
                            padding: 12px;
                            spacing: 12px;
                            
                            HorizontalLayout {
                                alignment: space-between;
                                
                                Text {
                                    text: "Water Level";
                                    font-size: 14px;
                                    color: #E0E0E0;
                                }
                                
                                StatusIndicator {
                                    level: StatusLevel.ok;
                                    label: data.water-level-status;
                                }
                            }
                            HorizontalLayout {
                                alignment: space-between;
                                
                                Text {
                                    text: "Heating";
                                    font-size: 14px;
                                    color: #E0E0E0;
                                }
                                
                                StatusIndicator {
                                    level: StatusLevel.ok;
                                    label: data.heater-status;
                                }
                            }
                        }
                    }

                    HorizontalLayout {
                        spacing: 12px;
                        
                        FilledButton {
                            text: "Start Brewing";
                            clicked => { start-brew-clicked(); }
                        }
                        OutlineButton {
                            text: "Stop";
                            clicked => { stop-brew-clicked(); }
                        }
                    }
                }
            }
        }
    }
}

export component ControlScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback target-changed(float);
    callback mode-changed(string);
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Brew Control";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            VerticalLayout {
                padding: 24px;
                spacing: 32px;
                alignment: center;
                
                VerticalLayout {
                    spacing: 8px;
                    alignment: center;
                    
                    Text {
                        text: "Current Temperature";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    HorizontalLayout {
                        alignment: center;
                        spacing: 4px;
                        
                        Text {
                            text: data.water-temperature;
                            font-size: 64px;
                            font-weight: 300;
                            color: white;
                        }
                        
                        Text {
                            text: "°F";
                            font-size: 24px;
                            color: #9E9E9E;
                            vertical-alignment: bottom;
                        }
                    }
                }
                
                Rectangle {
                    height: 1px;
                    background: #424242;
                }
                
                VerticalLayout {
                    spacing: 16px;
                    alignment: center;
                    
                    Text {
                        text: "Target Temperature";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    ValueStepper {
                        value <=> data.target-temperature;
                        min: 160;
                        max: 210;
                        step: 5;
                        unit: "°F";
                        
                        changed(val) => { target-changed(val); }
                    }
                }

                HorizontalLayout {
                    alignment: center;
                    spacing: 8px;
                    
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "light" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("light"); }
                        }
                        
                        Text {
                            text: "Light";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "medium" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("medium"); }
                        }
                        
                        Text {
                            text: "Medium";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "strong" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("strong"); }
                        }
                        
                        Text {
                            text: "Strong";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}

